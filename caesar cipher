def encrypt(text, shift):
    encrypted_text = ""
    for char in text:
        if char.isalpha():  # Check if the character is a letter
            shift_amount = shift % 26
            if char.islower():
                base = ord('a')
            else:
                base = ord('A')
            encrypted_char = chr((ord(char) - base + shift_amount) % 26 + base)
            encrypted_text += encrypted_char
        else:
            encrypted_text += char  # Non-alphabetic characters are added as is
    return encrypted_text

def decrypt(text, shift):
    return encrypt(text, -shift)  # Decrypting is just encrypting with a negative shift

def main():
    while True:
        choice = input("What you want to do (e)ncrypt, (d)ecrypt or (q)uit? ").lower()
        if choice == 'q':
            break
        elif choice in ['e', 'd']:
            text = input("Enter your message: ")
            shift = int(input("Enter shift value: "))
            if choice == 'e':
                print(f"Encrypted message: {encrypt(text, shift)}")
            elif choice == 'd':
                print(f"Decrypted message: {decrypt(text, shift)}")
        else:
            print("Invalid choice, please enter 'e' to encrypt, 'd' to decrypt, or 'q' to quit.")

if __name__ == "__main__":
    main()
